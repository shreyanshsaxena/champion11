<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gaps.champion11">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".BaseApplication"
        android:icon="@drawable/champion_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/champion_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Champion11"
        tools:ignore="AllowBackup">
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/Theme.Champion11.NoActionBar"/>
        <activity
            android:name=".ui.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.RegisterUserActivity" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.BookingNumberActivity"
            android:theme="@style/Theme.Champion11.NoActionBar"/>
        <activity android:name=".ui.OTPActivity" />
        <activity android:name=".ui.wallet.WalletActivity" />
        <activity android:name=".ui.PolicyActivity"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>