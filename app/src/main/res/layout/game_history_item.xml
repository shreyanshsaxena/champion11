<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:rippleColor="@color/carbon_grey_100"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="6dp"
        tools:cardElevation="6dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="@dimen/margin_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gameDate"
                android:textSize="16dp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 July 21"/>
            <TextView
                android:id="@+id/gameSlotTime"
                android:textSize="16dp"
                style="@style/TextBold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:59 PM to 10:50 AM"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patti No"/>
            <TextView
                android:id="@+id/pattiNo"
                android:textSize="14dp"
                style="@style/TextSemiBold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="453"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/margin_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bet Amount"/>
            <TextView
                android:id="@+id/betAmt"
                android:textSize="16dp"
                style="@style/TextBold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 5000"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewDetailsBtn"
                style="@style/MaterialButtonStyleGreen"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:clickable="true"
                app:backgroundTint="@color/colorGreen"
                android:gravity="center"
                android:padding="10dp"
                android:text="View Details"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:visibility="visible"
                app:cornerRadius="32dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>